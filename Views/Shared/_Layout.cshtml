﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" type="text/css"
          href="@Url.Content("~/Content/themes/simple/style.css")" />
</head>
<body>
    <div id="main">
        <div id="header">
            <div id="logo">

                <div id="logo_text">
                    <h1><a href="/">A Kat In The Code</a></h1>
                    <h2>Software developer, gamer, nerd...</h2>
                </div>
            </div>
            <!-- Navigation -->
            <div id="menubar">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Blog", "Index", "Posts")</li>*@
                    <li>@Html.ActionLink("About Me", "About", "Home")</li>
                    <li>@Html.ActionLink("Angular Calculator", "Calculator", "Home")</li>
                    @*<li>@Html.ActionLink("Angular2 Yahtzee", "ScoreSheet", "Home")</li>*@
                </ul>
            </div>

        </div>
        <div id="site_content">
            @RenderBody()
        </div>
        <div id="footer">
            <p><font size="2">&copy; @DateTime.Now.Year - KatInTheCode.com</font></p>
        </div>
    </div>
</body>
</html>